<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/familyshopp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_gravity="center"
        android:text="가격 걱정 없이"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="특가 상품으로"
        android:textColor="#667085"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이를 위한 최선을 선택하세요!"
        android:textColor="#667085"

        android:gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">


        <View
            android:id="@+id/rectangle31"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/rectangle_2"
            android:orientation="horizontal" />


        <View
            android:id="@+id/rectangle32"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/rectangle_2"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/rectangle33"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="3dp"
            android:src="@drawable/rectangle_1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>



    <RelativeLayout
        android:id="@+id/btn2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="342dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="150dp"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/button_medium"/>


    </RelativeLayout>

</LinearLayout>